#
# SprinklerPI daemon configuration.
#
# These override the defaults in the /etc/init.d scripts.
#

# example, installed under user 'jeri'
export DIR=/home/jeri/sprinklerpi/sprinklerpi
export BIN=/home/jeri/sprinklerpi/bin
export PIDIR=/home/jeri/sprinklerpi/var/run/sprinklerpi

export USER=jeri
export GROUP=jeri

#export DEV="/dev/spidev0.0"
#export DEV="/dev/spidev0.1"
export DEV="/dev/null"
# null is good for testing

export VERBOSE=0

# for client/server
export HOST="localhost"
export PORT="5000"

